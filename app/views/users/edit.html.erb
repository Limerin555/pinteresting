<%= form_tag user_path(@user), method: :patch do %>
  <p>
    <%= label_tag "Username" %><br />
    <%= text_field_tag :username %>
  </p>

  <p>
    <%= label_tag "Email" %><br />
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag "Password" %><br />
    <%= password_field_tag :password %>
  </p>

  <p class="button"><%= submit_tag "Enter" %></p>
<% end %>
