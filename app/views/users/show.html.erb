<h1 id="user-prof">User Profile</h1>

<div class="transistions-enabled" id="pins">
  <div class="box panel panel-default" id="prof-panel" style="width:1000px; height:440px; padding:20px; margin: auto;">
    <div id="prof-pic" style="float:left;" style="width:300px; height:300px;">
      <% if current_user.profpic.nil? %>
      <p>Please upload a Profile Picture</p>
      <% else %>
      <%= image_tag current_user.profpic %>
      <% end %>
    </div>
    <div class="panel-body pull-left" id="prof-details" style="text-align:left; margin-right: 50px; margin-left:20px;">
      <h2>
        Username: <%= current_user.username %><br>
        <br>
        User email: <%= current_user.email %><br>
      </h2>
      <div class="btn-group pull-left" style="float:left; margin-left:10px;">
        <%= link_to "Edit", edit_user_path, class: "btn btn-default" %>
        <%= link_to "Delete Account", user_path, method: :delete, data: {confirm: "Are you sure you want to delete this user profile?"}, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
