<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-brand">
      <%= link_to "Pinteresting", root_path %>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li>
        <%= link_to "New Pin", new_pin_path %>
      </li>
    </ul>
  </div>
</nav>

<div class="row" id="pin_show">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default" style=" margin-left: auto; margin-right: auto; margin-top: 20px; margin-bottom: 20px;">
      <div class="panel-heading pin_image">
        <%= image_tag @pin.photo %>
      </div>
      <div class="panel-body">
        <h1>
          <%= @pin.title %>
        </h1>
        <p class="description">
          <%= @pin.description %>
        </p>
        <p>
          Submitted by:
          <%= @pin.user.username %>
        </p>
        <% unless session[:user_id].nil? %>
          <% unless @pin.user_id == current_user.id %>
          <br>
          <p>
            Like the work? Support the artist now<br>
            <%= link_to "Donate $10", new_pin_donation_path(@pin), class: "btn btn-default" %>
          </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
